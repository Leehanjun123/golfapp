# Railway Production Environment
NODE_ENV=production
PORT=8080

# 데이터베이스
DATABASE_URL=./data/golf_ai.db

# JWT
JWT_SECRET=golf-ai-production-secret-key-2025

# API Keys (Railway에서 환경변수로 설정)
OPENAI_API_KEY=
HUGGINGFACE_API_KEY=

# CORS
ALLOWED_ORIGINS=https://golfai-production.railway.app,https://golfai.loca.lt

# 성능 최적화
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=600000
MAX_REQUEST_SIZE=50mb

# 메모리 관리
MAX_MEMORY_USAGE=80
MEMORY_CHECK_INTERVAL=30000
ENABLE_MEMORY_CLEANUP=true

# AI 모델 설정
AI_MODEL_THRESHOLD=0.1
ENABLE_ENHANCED_AI=true
MAX_CONCURRENT_ANALYSES=5

# 로깅
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true