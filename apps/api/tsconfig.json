{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "declaration": true,
    "target": "ES2020",
    "module": "CommonJS",
    "jsx": "preserve"
  },
  "include": [
    "src/**/*",
    "*.js",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ],
  "references": [
    {
      "path": "../../packages/types"
    },
    {
      "path": "../../packages/shared"
    }
  ]
}